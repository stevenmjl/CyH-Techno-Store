@page "/DetalleFactura/Index"
@rendermode InteractiveServer
@inject DetalleFacturasService detalleService
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]

<PageTitle>Detalles de Factura</PageTitle>

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white text-center">
            <h2>Consulta de Detalles de Factura</h2>
        </div>

        <div class="card-body">
            <div class="mb-3 text-end">
                <a href="/DetalleFactura/Create" class="btn btn-success bi bi-plus-circle"> Nuevo Detalle</a>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover table-bordered">
                    <thead class="table-info text-center">
                        <tr>
                            <th>ID</th>
                            <th>Factura ID</th>
                            <th>Producto</th>
                            <th>Cantidad</th>
                            <th>Precio Unitario</th>
                            <th>Subtotal</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (listaDetalles.Any())
                        {
                            @foreach (var detalle in listaDetalles)
                            {
                                <tr class="text-center">
                                    <td>@detalle.DetalleFacturaId</td>
                                    <td>@detalle.FacturaId</td>
                                    <td>@detalle.Productos?.Nombre</td>
                                    <td>@detalle.Cantidad</td>
                                    <td>@detalle.PrecioUnitario.ToString("C2")</td>
                                    <td class="fw-bold">@detalle.Subtotal.ToString("C2")</td>
                                    <td>
                                        <a href="/DetalleFactura/Edit/@detalle.DetalleFacturaId" class="btn btn-warning btn-sm bi bi-pencil-square me-1"></a>
                                        <button class="btn btn-danger btn-sm bi bi-trash" @onclick="() => EliminarDetalle(detalle.DetalleFacturaId)"></button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center">No hay detalles registrados.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@code {
    private List<DetalleFacturas> listaDetalles = new();

    protected override async Task OnInitializedAsync()
    {
        listaDetalles = await detalleService.ListarTodos();
    }


    private async Task EliminarDetalle(int id)
    {
        if (await detalleService.Eliminar(id))
        {
            listaDetalles.RemoveAll(d => d.DetalleFacturaId == id);
        }
    }
}
